@require "./colour"

// Font
font-normal = 'Albert Sans', 'Gotham Narrow', Helvetica, Arial, sans-serif
font-header = 'Albert Sans', 'Gotham Medium', 'Gotham Narrow', Helvetica, Arial, sans-serif

// Mobile
mobile-max-width = 850px

// Spacing
spacing-0 = 3px
spacing-1 = 8px
spacing-2 = 11px
spacing-3 = 16px
spacing-4 = 21px
spacing-5 = 24px
spacing-6 = 32px
spacing-7 = 50px
spacing-8 = 65px

tiny-radius = 3px
small-radius = 5px
medium-radius = 6px

// // Guilded Gilded
