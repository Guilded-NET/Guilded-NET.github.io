@import "../variables"

/*
 * Custom syntax highlight theme by IdkGoodName
 */

.token.namespace
    opacity: .8

.token.comment,
.token.doctype,
.token.prolog,
.token.cdata,
.c
    color: var(--foreground-4)

code.language-markup .token.attr-value .token.attr-equals,
code.language-markup .token.attr-equals,
.token.attr-value .token.attr-equals,
code.language-markup .token.tag,
.token.attr-equals,
.token.important,
.token.operator,
.token.deleted,
.token.keyword,
.token.atrule,
.token.tag,
.k
    color: deleted

code.language-markup .token.attr-value .token.punctuation:not(.attr-equals),
.token.attr-value .token.punctuation:not(.attr-equals),
code.language-markup .token.attr-value,
.token.attr-value,
.token.entity,
.token.string,
.token.url,
.s
    color: #fc7d98

// Brackets in interpolation
.token.interpolation > .token.punctuation
    color: #fcac7d

// Constants
.token.boolean,
.token.number
    color: #c998f9

code.language-markup .token.script .token.keyword,
code.language-markup .token.script,
code.language-markup .token.style,
.token.script .token.keyword,
.token.statement,
.token.property,
.token.script,
.token.regex,
.token.style,
.nc
    color: #74a6f8

.token.class-name
    color: #ffb95e

.token.placeholder,
.token.variable,
.n
    color: #fff

.token.named-parameter
    color: #9c74f8

code.language-markup .token.attr-name,
.token.attr-name,
.token.selector,
.token.inserted,
.token.function,
.fn,
.f
    color: inserted

.token.punctuation:not(.named-parameter),
.token.class-name .token.punctuation,
.p
    color: var(--foreground-1)

.token.bold,
.token.important,
.token.statement
    font-weight: bold

.token.entity
    cursor: help

.token.italic
    font-style: italic

/* Line highlight plugin */
pre[class*="language-"][data-line]
    position: relative
    padding: 1em 0 1em 3em

pre[data-line] .line-highlight
    position: absolute
    left: 0
    right: 0
    padding: 0
    margin-top: 1em
    background: rgba(255, 255, 255, 0.08)
    pointer-events: none
    line-height: inherit
    white-space: pre

pre[data-line] .line-highlight:before,
pre[data-line] .line-highlight[data-end]:after
    content: attr(data-start)
    position: absolute
    top: .4em
    left: .6em
    min-width: 1em
    padding: 0.2em 0.5em
    background-color: rgba(255, 255, 255, 0.4)
    color: black
    font: bold 65%/1 sans-serif
    height: 1em
    line-height: 1em
    text-align: center
    border-radius: 999px
    text-shadow: none
    box-shadow: 0 1px 1px rgba(255, 255, 255, 0.7)

pre[data-line] .line-highlight[data-end]:after
    content: attr(data-end)
    top: auto
    bottom: .4em
